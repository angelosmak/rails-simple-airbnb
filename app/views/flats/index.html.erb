<div class="d-flex mb-3 bg-light ">
  <div class="me-auto p-2">
    <a class="text-decoration-none mt-5 fs-4" href="/flats">Simple Airbnb</a>
  </div>
  <div class="p-2">
    <form class="row g-3">
      <div class="col-auto">
        <label for="inputPassword2" class="visually-hidden">Search</label>
        <input type="text" class="form-control" id="inputPassword2" placeholder="Search">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-outline-success py-1">Search</button>
      </div>
    </form>
  </div>
    <div>
      <a href="/new" class="p-2 btn btn-outline-primary mt-2 py-1">Add Flat</a>
    </div>
  </div>
</div>

<div class="container text-center">
  <h1>These are all the Flats:</h1>
  <div class="row row-cols-3 mt-4 ">
    <% @flats.each do |flat| %>
      <div class="flat-card col "  style="width: 27rem; height: 40rem;">
        <div class="card bg-light rounded" >
        <img src="https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80" class="rounded mx-auto d-block" alt="image" width="100%" height="30%">
        </div>
        <div class="card-body bg-light">
          <h2 class="card-title fs-5"><%=link_to "#{flat.name}",flat_path(flat.id)%></h2>
          <h5 class="card-text fw-light"><%= flat.address %></h5>
          <div>
            <hr>
            <ul class=" list-group list-group-horizontal ">
              <li class="list-group-item "><i class="fa-solid fa-dollar-sign"></i><%= flat.price_per_night %></li>
              <li class="list-group-item "><i class="fa-solid fa-person"></i><%= flat.number_of_guests %></li>
            </ul>
          </div>
          <div class="card-body bg-white">
            <a href="/flat/<%= flat.id %>" class="card-link text-primary">More Info</a>
            <a href="/flat/<%= flat.id %>" class="card-link text-warning">Edit</a>
            <a href="/flat/<%= flat.id %>" class="card-link text-danger">Remove</a>
          </div>
        </div>
      </div>
    <%end %>
  </div>
</div>


